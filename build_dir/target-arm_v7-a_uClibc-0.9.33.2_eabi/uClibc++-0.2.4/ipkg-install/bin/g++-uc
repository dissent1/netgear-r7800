#!/usr/bin/env bash

WRAPPER_INCLUDEDIR="${WRAPPER_INCLUDEDIR:=-I/include/}"
WRAPPER_LIBDIR="${WRAPPER_LIBDIR:=-L/lib/}"

WRAPPER_OPTIONS=""
WRAPPER_LIBS="-lc -L/home/projects/R7800-V1.0.0.40_gpl_src/staging_dir/toolchain-arm_v7-a_gcc-4.6-linaro_uClibc-0.9.33.2_eabi/lib -lgcc_s "

WRAPPER_INCLIB="Y"
while [ -n "$1" ]
do
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS $1"
	if [ "$1" = "-c" -o "$1" = "-E" -o "$1" = "-S" -o "$1" = "-MF" ]
	then
		WRAPPER_INCLIB="N"
	fi
	if [ "$1" = "-static" ]
	then
		WRAPPER_LIBS="-lc -L/home/projects/R7800-V1.0.0.40_gpl_src/staging_dir/toolchain-arm_v7-a_gcc-4.6-linaro_uClibc-0.9.33.2_eabi/lib -lgcc_s -lgcc_eh"
	fi
	shift
done
if [ "$WRAPPER_INCLIB" = "Y" ]
then
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS -nodefaultlibs $WRAPPER_LIBDIR -luClibc++ $WRAPPER_LIBS"
fi

exec arm-openwrt-linux-uclibcgnueabi-g++ -fno-builtin -nostdinc++ -DGCC_HASCLASSVISIBILITY  $WRAPPER_INCLUDEDIR $WRAPPER_OPTIONS
